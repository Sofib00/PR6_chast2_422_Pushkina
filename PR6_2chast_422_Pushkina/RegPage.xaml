<Page x:Class="PR6_chast2_422_Pushkina.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_chast2_422_Pushkina"
      mc:Ignorable="d" 
      Title="RegPage"  Height="500" Width="800" Background="#FF8C6D51">

    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" FontSize="34" HorizontalAlignment="Left" VerticalAlignment="Center" Text="Регистрация" Foreground="White" Background="#66000000"/>
        <TextBlock Grid.Row="2" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="ФИО:" Foreground="White" Background="#66000000"/>
        <TextBox x:Name="fio" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="10" Background="White"/>
        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Логин:" Foreground="White" Background="#66000000"/>
        <TextBox x:Name="login" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="10" Background="White"/>
        <TextBlock Grid.Row="4" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Пароль:" Foreground="White" OpacityMask="Black" Background="#66000000"/>
        <PasswordBox x:Name="parol" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" Margin="10" Background="White"/>
        <TextBlock Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="2" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Text="(Повторите пароль)" Foreground="White" OpacityMask="Black" Background="#66000000"/>
        <PasswordBox x:Name="parol2" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" Margin="10" Background="White"/>
        <TextBlock Grid.Row="5" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Email:" Foreground="White" Background="#66000000"/>
        <TextBox x:Name="email" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Margin="10" Background="White"/>
        <Button x:Name="reg" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="3" FontSize="18" Margin="10" Content="Регистрация" Click="reg_Click" Background="#FF174B1C" Foreground="#FFBDB7B7"/>
        <Button x:Name="otm" Grid.Row="7" Grid.Column="5" Margin="10" FontSize="18" Content="Назад" Click="otm_Click" Background="#B2DDDDDD"/>
    </Grid>
</Page>
